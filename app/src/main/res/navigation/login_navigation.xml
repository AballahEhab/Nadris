<?xml version="1.0" encoding="utf-8"?>
<navigation
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools" android:id="@+id/login_navigation"
    app:startDestination="@id/teachers_RV_fragment">
    
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.android.nadris.login.LoginFragment"
        android:label="login_fragment"
        tools:layout="@layout/login_fragment"
        >
        <action
            android:id="@+id/action_loginFragment_to_SignUpFragment"
            app:destination="@id/signupFragment"
            />
    </fragment>

    <fragment
        android:id="@+id/signupFragment"
        android:name="com.example.android.nadris.signUp.SignupFragment"
        android:label="signup_fragment"
        tools:layout="@layout/signup_fragment">
        <action
            android:id="@+id/action_signupFragment_to_signupTeacherFragment"
            app:destination="@id/signupTeacherFragment"
            />
        <action
            android:id="@+id/action_signupFragment_to_signupStudentFragment"
            app:destination="@id/signupStudentFragment"
            />
        <action
            android:id="@+id/action_signupFragment_to_loginFragment"
            app:destination="@id/loginFragment"
            />
    </fragment>

    <fragment
        android:id="@+id/signupTeacherFragment"
        android:name="com.example.android.nadris.signupTeacherFragment"
        android:label="signup_teacher_fragment"
        tools:layout="@layout/signup_teacher_fragment"/>

    <fragment
        android:id="@+id/signupStudentFragment"
        android:name="com.example.android.nadris.signupStudentFragment"
        android:label="signup_student_fragment"
        tools:layout="@layout/signup_student_fragment"/>

    <fragment
        android:id="@+id/phoneFragment"
        android:name="com.example.android.nadris.phoneVerification.PhoneFragment"
        android:label="phone_fragment"
        tools:layout="@layout/phone_fragment"/>
    <fragment
        android:id="@+id/subjectsRvFragment"
        android:name="com.example.android.nadris.subject_student.SubjectsRvFragment"
        android:label="SubjectsRvFragment" >
        <action
            android:id="@+id/action_subjectsRvFragment_to_teachers_RV_fragment"
            app:destination="@id/teachers_RV_fragment" />
    </fragment>
    <fragment
        android:id="@+id/teachers_RV_fragment"
        android:name="com.example.android.nadris.select_teacher.teachers_RV_fragment"
        android:label="teachers_RV_fragment" />
    <fragment
        android:id="@+id/sub_teacher_rv_Fragment"
        android:name="com.example.android.nadris.subjects_teacher.sub_teacher_rv_Fragment"
        android:label="sub_teacher_rv_Fragment" >
        <action
            android:id="@+id/action_sub_teacher_rv_Fragment_to_choosing_new_subjects"
            app:destination="@id/choosing_new_subjects" />
        <argument
            android:name="select_class"
            app:argType="string" />
        <argument
            android:name="select_subject"
            app:argType="string" />
        <argument
            android:name="select_semester"
            app:argType="string"
            app:nullable="true" />
    </fragment>
    <fragment
        android:id="@+id/choosing_new_subjects"
        android:name="com.example.android.nadris.subjects_teacher.choosing_new_subjects"
        android:label="choosing_new_subjects" >
        <action
            android:id="@+id/action_choosing_new_subjects_to_sub_teacher_rv_Fragment"
            app:destination="@id/sub_teacher_rv_Fragment" />
    </fragment>

</navigation>
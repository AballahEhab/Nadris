<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools" android:id="@+id/login_navigation"
    app:startDestination="@id/loginFragment">
    
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.android.nadris.ui.loginActivity.login.LoginFragment"
        android:label="login_fragment"
        tools:layout="@layout/login_fragment"
        >
        <action
            android:id="@+id/action_loginFragment_to_SignUpFragment"
            app:destination="@id/signupFragment"
            app:popUpTo="@id/loginFragment"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_loginFragment_to_PostsFragment"
            app:destination="@id/postFragment"
            app:popUpTo="@id/loginFragment"
            app:popUpToInclusive="true" />

    </fragment>

    <fragment
        android:id="@+id/signupFragment"
        android:name="com.example.android.nadris.ui.loginActivity.signUp.SignupFragment"
        android:label="signup_fragment"
        tools:layout="@layout/signup_fragment">
        <action
            android:id="@+id/action_signupFragment_to_signupTeacherFragment"
            app:destination="@id/signupTeacherFragment"
            />
        <action
            android:id="@+id/action_signupFragment_to_signupStudentFragment"
            app:destination="@id/signupStudentFragment"
            />
        <action
            android:id="@+id/action_signupFragment_to_loginFragment"
            app:destination="@id/loginFragment"
            app:popUpTo="@id/signupFragment"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/signupTeacherFragment"
        android:name="com.example.android.nadris.ui.loginActivity.signUpTeacher.signupTeacherFragment"
        android:label="signup_teacher_fragment"
        tools:layout="@layout/signup_teacher_fragment">
        <action android:id="@+id/action_signupTeacherFragment_to_signupFragment"
                app:destination="@id/signupFragment"/>
        <action android:id="@+id/action_signupTeacherFragment_to_PhoneFragment"
                app:destination="@id/phoneFragment"/>
    </fragment>

    <fragment
        android:id="@+id/signupStudentFragment"
        android:name="com.example.android.nadris.ui.loginActivity.signUpStudent.signupStudentFragment"
        android:label="signup_student_fragment"
        tools:layout="@layout/signup_student_fragment">

        <action android:id="@+id/action_signupStudentFragment_to_signupFragment"
                app:destination="@id/signupFragment"/>
        <action android:id="@+id/action_signupStudentFragment_to_PhoneFragment"
                app:destination="@id/phoneFragment"/>

    </fragment>

    <fragment
        android:id="@+id/phoneFragment"
        android:name="com.example.android.nadris.ui.loginActivity.phoneVerification.PhoneFragment"
        android:label="phone_fragment"
        tools:layout="@layout/phone_fragment"/>
    <fragment
        android:id="@+id/subjectsRvFragment"
        android:name="com.example.android.nadris.SubjectsRvFragment"
        android:label="SubjectsRvFragment" />
    <fragment
        android:id="@+id/teachers_RV_fragment"
        android:name="com.example.android.nadris.teachers_RV_fragment"
        android:label="teachers_RV_fragment" />
    <fragment
        android:id="@+id/sub_teacher_rv_Fragment"
        android:name="com.example.android.nadris.sub_teacher_rv_Fragment"
        android:label="sub_teacher_rv_Fragment" >
        <action
            android:id="@+id/action_sub_teacher_rv_Fragment_to_choosing_new_subjects"
            app:destination="@id/choosing_new_subjects" />
    </fragment>
    <fragment
        android:id="@+id/choosing_new_subjects"
        android:name="com.example.android.nadris.choosing_new_subjects"
        android:label="choosing_new_subjects" >
        <action
            android:id="@+id/action_choosing_new_subjects_to_sub_teacher_rv_Fragment"
            app:destination="@id/sub_teacher_rv_Fragment" />
    </fragment>

    <fragment android:id="@+id/postFragment"
              android:name="com.example.android.nadris.ui.studentActivity.posts.post_pageFragment"
              android:label="post_fragment"
              tools:layout="@layout/post_page_fragment">
        <action android:id="@+id/action_postFragment_to_addPostFragment"
                app:destination="@id/addPostFragment"/>
    </fragment>

    <fragment android:id="@+id/addPostFragment"
              android:name="com.example.android.nadris.ui.studentActivity.posts.post_pageFragment"
              android:label="addPost_fragment"
              tools:layout="@layout/add_post_fragment"/>
</navigation>
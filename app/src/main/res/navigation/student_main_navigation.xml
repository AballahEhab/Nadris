<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/mobile_navigation"
            app:startDestination="@id/navigation_posts">

    <fragment
        android:id="@+id/navigation_posts"
        android:name="com.example.android.nadris.ui.studentActivity.posts.PostPageFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_post_page">
        <action
            android:id="@+id/action_navigation_posts_to_addPostFragment"
            app:destination="@id/addPostFragment"/>
        <action
            android:id="@+id/action_navigation_posts_to_addCommentFragment"
            app:destination="@id/addCommentFragment"/>
    </fragment>

    <fragment
        android:id="@+id/subject_fragment1"
        android:name="com.example.android.nadris.ui.teacherActivity.subjects_teacher.SubjectFragment"
        android:label="sub_teacher_rv_Fragment"
        tools:layout="@layout/fragment_sub_teacher_rv">
        <action
            android:id="@+id/action_subject_fragment_to_add_new_subject"
            app:destination="@id/add_new_subject"/>
        <action android:id="@+id/action_subject_fragment_to_subject_Units" app:destination="@id/subject_Units"/>
    </fragment>

    <fragment
        android:id="@+id/subject_Units"
        android:name="com.example.android.nadris.ui.studentActivity.units.UnitsFragment"
        tools:layout="@layout/fragment_units">
        <argument android:name="subjectId"
                  app:argType="long"/>
    </fragment>
    <fragment
        android:id="@+id/subjectsRvFragment"
        android:name="com.example.android.nadris.ui.studentActivity.subject_student.SubjectsRvFragment"
        android:label="@string/student_subjects_title"
        tools:layout="@layout/fragment_subjects_rv"
    >
        <action
            android:id="@+id/action_subjectsRvFragment_to_teachers_RV_fragment"
            app:destination="@id/teachers_RV_fragment"/>
    </fragment>
    <fragment
        android:id="@+id/profile"
        android:name="com.example.android.nadris.ui.studentActivity.profile.ProfileFragment"
        android:label="@string/profile"
        tools:layout="@layout/fragment_profile">
        <action
            android:id="@+id/action_profile_to_settingsFragment"
            app:destination="@id/settingsFragment"/>
    </fragment>

    <fragment
        android:id="@+id/teachers_RV_fragment"
        android:name="com.example.android.nadris.ui.studentActivity.select_teacher.teachers_RV_fragment"
        android:label="teachers_RV_fragment"
    tools:layout="@layout/fragment_teachers__r_v"
    >
        <action
            android:id="@+id/action_teachers_RV_fragment_to_headline_subjects"
            app:destination="@id/subject_Units"/>

    </fragment>

    <fragment
        android:id="@+id/addPostFragment"
        android:name="com.example.android.nadris.ui.studentActivity.addPosts.AddPostFragment"
        android:label="addPostFragment"
        tools:layout="@layout/fragment_add_pos"
    >
        <action android:id="@+id/action_addPostFragment_to_navigation_posts"
                app:destination="@id/navigation_posts"/>
    </fragment>
    <fragment
        android:id="@+id/addCommentFragment"
        android:name="com.example.android.nadris.ui.studentActivity.posts.comment.AddCommentFragment"
        android:label="AddCommentFragment"
        tools:layout="@layout/fragment_add_comment"
    >
        <argument
            android:name="postId"
            app:argType="long" />
    </fragment>
    <fragment
        android:id="@+id/settingsFragment"
        android:name="com.example.android.nadris.ui.studentActivity.settings.SettingsFragment"
        android:label="fragment_settings"
        tools:layout="@layout/fragment_settings">
        <action
            android:id="@+id/action_settingsFragment_to_profile"
            app:destination="@id/profile"/>
        <action
            android:id="@+id/action_settingsFragment_to_helpFragment"
            app:destination="@id/helpFragment"/>
    </fragment>
    <fragment
        android:id="@+id/helpFragment"
        android:name="com.example.android.nadris.ui.studentActivity.settings.help.HelpFragment"
        android:label="HelpFragment"
        tools:layout="@layout/fragment_help">
        <action
            android:id="@+id/action_helpFragment_to_settingsFragment"
            app:destination="@id/settingsFragment"/>
    </fragment>

    <fragment
        android:id="@+id/subject_fragment"
        android:name="com.example.android.nadris.ui.studentActivity.units.SubjectFragment"
        android:label="SubjectFragment"
        tools:layout="@layout/fragment_subject">

    </fragment>


</navigation>
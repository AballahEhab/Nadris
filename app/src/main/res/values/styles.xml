<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ThemeOverlay.search" parent="AppTheme">

        <!-- Text color -->
        <item name="android:editTextColor">@color/white</item>
        <!-- Hint text color -->
        <item name="android:textColorHint">@color/black</item>

    </style>

    <style name="material_text_input" parent="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:fontFamily">@font/cairo_light</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/mid_radius</item>
        <item name="boxCornerRadiusBottomStart">@dimen/mid_radius</item>
        <item name="boxCornerRadiusTopEnd">@dimen/mid_radius</item>
        <item name="boxCornerRadiusTopStart">@dimen/mid_radius</item>
        <item name="android:textSize">@dimen/header_text_size</item>
        <item name="helperTextTextColor">@android:color/holo_red_dark</item>
        <item name="android:minHeight">@dimen/min_height</item>
        <item name="hintTextColor">@color/text_color</item>
        <item name="boxStrokeColor">@color/text_color</item>
    </style>
    <style name="material_drop_menu"
           parent="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="boxCornerRadiusBottomEnd">@dimen/mid_radius</item>
        <item name="boxCornerRadiusBottomStart">@dimen/mid_radius</item>
        <item name="boxCornerRadiusTopEnd">@dimen/mid_radius</item>
        <item name="boxCornerRadiusTopStart">@dimen/mid_radius</item>
        <item name="android:fontFamily">@font/cairo_light</item>
        <item name="android:minHeight">@dimen/min_height</item>
        <item name="hintTextColor">@color/text_color</item>
        <item name="boxStrokeColor">@color/text_color</item>
        <item name="colorSurface">@color/text_color</item>
    </style>
    <style name="material_btn" parent="Widget.MaterialComponents.Button">
     <item name="cornerRadius">@dimen/mid_radius</item>
        <item name="backgroundTint">@color/pink</item>
    </style>
    <style name="material_text_header" parent="TextAppearance.MaterialComponents.Headline3">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_color</item>
    </style>
</resources>
<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable name="viewModel"
                  type="com.example.android.nadris.ui.studentActivity.quizzes.QuizViewModel"/>
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.studentActivity.quizzes.resultQuiz.ResultFragment">
        <TextView
            android:id="@+id/result_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:textSize="@dimen/header_text_size"
            style="@style/material_text_header"
            android:layout_marginTop="@dimen/xlarge_margin"
            android:layout_marginStart="@dimen/large_margin"
            android:layout_marginEnd="@dimen/large_margin"
            android:text="@string/result"
        />
        <ProgressBar
            android:id="@+id/result_progress"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:progress="75"
            style="@style/CircularDeterminateProgressBar"
            android:layout_marginStart="@dimen/xlarge_margin"
            android:layout_marginEnd="@dimen/xlarge_margin"
            android:layout_marginTop="@dimen/_52"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/result_title"
        />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="@+id/result_progress"
            app:layout_constraintStart_toStartOf="@+id/result_progress"
            app:layout_constraintTop_toBottomOf="@+id/result_progress"
            tools:text="@string/result_congrats"
            android:layout_marginTop="@dimen/_23"
            android:textSize="@dimen/mid_text_size"
            style="@style/material_text_body_small"
            android:id="@+id/result_feedback"/>
        <TextView
            android:id="@+id/low_result_feedback"
            android:layout_width="@dimen/match_constrain"
            android:layout_height="wrap_content"
            style="@style/material_text_body_small"
            android:gravity="center"
            android:text="@string/we_know_you_have_inside_you_ntry_hard_next_time"
            android:textSize="@dimen/mid_text_size"
            android:layout_marginStart="@dimen/_21"
            android:layout_marginTop="@dimen/_16"
            android:layout_marginEnd="@dimen/_21"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/result_feedback"
            android:visibility="invisible"
        />
        <TextView
            android:id="@+id/result_percent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/result_percent"
            android:textSize="@dimen/mid_text_size"
            app:layout_constraintBottom_toBottomOf="@+id/result_progress"
            app:layout_constraintEnd_toEndOf="@+id/result_progress"
            app:layout_constraintStart_toStartOf="@+id/result_progress"
            app:layout_constraintTop_toTopOf="@+id/result_progress"/>
        <com.google.android.material.button.MaterialButton
            android:layout_height="wrap_content"
            android:layout_width="@dimen/match_constrain"
            style="@style/material_btn"
            android:id="@+id/report_btn"
            app:layout_constraintBottom_toTopOf="@id/quiz_answer_btn"
            android:textSize="@dimen/mid_text_size"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/large_margin"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/low_result_feedback"
            android:layout_marginStart="@dimen/_21"
            android:layout_marginEnd="@dimen/_21"
            android:text="@string/report"/>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/quiz_answer_btn"
            style="@style/material_btn"
            android:layout_height="wrap_content"
            android:layout_width="@dimen/match_constrain"
            android:textSize="@dimen/mid_text_size"
            android:textStyle="bold"
            android:layout_marginStart="@dimen/_21"
            android:layout_marginEnd="@dimen/_21"
            android:text="@string/quiz_answers"
            app:layout_constraintBottom_toTopOf="@+id/result_home_btn"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/report_btn"/>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/result_home_btn"
            android:layout_width="@dimen/match_constrain"
            android:layout_height="wrap_content"
            style="@style/material_btn"
            android:textSize="@dimen/mid_text_size"
            android:textStyle="bold"
            android:layout_marginStart="@dimen/_21"
            android:layout_marginEnd="@dimen/_21"
            android:layout_marginBottom="@dimen/_16"
            android:text="@string/go_to_home"
            app:layout_constraintTop_toBottomOf="@id/quiz_answer_btn"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
        <com.airbnb.lottie.LottieAnimationView
            android:layout_width="@dimen/match_constrain"
            android:layout_height="@dimen/match_constrain"
            android:id="@+id/fireworks_animation"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/result_home_btn"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/celebrations_anim"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
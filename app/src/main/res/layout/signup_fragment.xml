<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignupFragment">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="408dp"
        android:layout_height="170dp"
        android:src="@drawable/logo_nadris"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView_register_as"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/cairo"
        android:paddingBottom="24dp"
        android:text="@string/textView_register_as_signup"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView_teacher"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/black"
        app:cardCornerRadius="24dp"
        app:layout_constraintEnd_toStartOf="@+id/guideline2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_register_as">

        <ImageView
            android:id="@+id/imageView_teacher"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:src="@drawable/icon_teacher" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView_student"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/black"
        app:cardCornerRadius="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/guideline2"
        app:layout_constraintTop_toBottomOf="@+id/textView_register_as">

        <ImageView
            android:id="@+id/imageView_student"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:src="@drawable/icon_student" />
    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:id="@+id/cardView_parent"
        android:layout_width="129dp"
        android:layout_height="120dp"
        app:cardBackgroundColor="@color/design_default_color_primary"
        app:cardCornerRadius="24dp"
        app:layout_constraintBottom_toTopOf="@+id/textView_parent"
        app:layout_constraintEnd_toStartOf="@+id/guideline2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_teacher">

        <ImageView
            android:id="@+id/imageView_parent"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:src="@drawable/ic_icons8_human_head" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView_other"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/black"
        app:cardCornerRadius="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/guideline2"
        app:layout_constraintTop_toBottomOf="@+id/textView_student"
        app:layout_constraintBottom_toTopOf="@id/textView_other"
        >

        <ImageView
            android:id="@+id/imageView_other"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:src="@drawable/icon_other" />
    </androidx.cardview.widget.CardView>


    <TextView
        android:id="@+id/textView_student"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/cairo_light"
        android:text="@string/textView_student_signup"
        app:layout_constraintBottom_toTopOf="@id/cardView_other"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/guideline2"
        app:layout_constraintTop_toBottomOf="@+id/cardView_student" />

    <TextView
        android:id="@+id/textView_parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/cairo_light"
        android:text="@string/textView_parent"
        app:layout_constraintBottom_toTopOf="@id/textView_account_login"
        app:layout_constraintEnd_toStartOf="@+id/guideline2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cardView_parent" />

    <TextView
        android:id="@+id/textView_other"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/cairo_light"
        android:text="@string/textView_other"
        app:layout_constraintBottom_toTopOf="@id/textView_HaveAccount_signin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/guideline2"
        app:layout_constraintTop_toBottomOf="@+id/cardView_other" />

    <TextView
        android:id="@+id/textView_teacher"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:fontFamily="@font/cairo_light"
        android:text="@string/textView_teacher_signup"
        app:layout_constraintBottom_toTopOf="@id/cardView_parent"
        app:layout_constraintEnd_toStartOf="@+id/guideline2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView_teacher" />


        <TextView
            android:id="@+id/textView_account_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           android:padding="16dp"
            android:text="@string/textView_account_login"
            android:fontFamily="@font/cairo_light"
            android:textColor="#BF2222"
            app:layout_constraintEnd_toStartOf="@id/guideline2"
            app:layout_constraintBottom_toBottomOf="parent"
       />

    <TextView
        android:id="@+id/textView_HaveAccount_signin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="16dp"
        app:layout_constraintStart_toEndOf="@id/guideline2"
        app:layout_constraintBottom_toBottomOf="parent"

        android:text="@string/textView_HaveAccount_signin"
        android:fontFamily="@font/cairo_light"/>




</androidx.constraintlayout.widget.ConstraintLayout><!--TODO Ø³Ø±Ø­Ø§Ù† Ø§-->
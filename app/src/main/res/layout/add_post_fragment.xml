<?xml version="1.0" encoding="utf-8"?>
<layout            xmlns:android="http://schemas.android.com/apk/res/android"
                   xmlns:tools="http://schemas.android.com/tools"
                   xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable name="AddPostViewModel" type="com.example.android.nadris.AddPostViewModel"/>
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".addPostFragment">
        <com.google.android.material.textfield.TextInputLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                android:fontFamily="@font/cairo_light"
                app:boxCornerRadiusBottomEnd="12dp"
                app:boxCornerRadiusBottomStart="12dp"
                app:boxCornerRadiusTopEnd="12dp"
                app:boxCornerRadiusTopStart="12dp"
                android:hint="@string/theSubject"
                app:layout_constraintEnd_toEndOf="parent"
                android:minHeight="48dp"
                android:id="@+id/spAddSubject"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="636dp" app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintVertical_bias="1.0">
            <AutoCompleteTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="none"
                    android:id="@+id/autoCompleteTextView"
            android:text="@={AddPostViewModel.subjects}"/>
        </com.google.android.material.textfield.TextInputLayout>
        <TextView
                android:layout_width="match_parent"
                android:layout_height="213dp"
                android:id="@+id/textViewAddQesition"
                app:layout_constraintTop_toBottomOf="@+id/spAddSubject"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:hint="@string/yourQus"
                android:layout_marginTop="112dp"
                app:layout_constraintHorizontal_bias="0.0"
                android:text="@={AddPostViewModel.question}"/>
        <Button
                android:id="@+id/imageButton"
                android:layout_width="wrap_content"
                android:layout_height="61dp"
                android:text="@string/addImage"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                app:boxCornerRadiusBottomEnd="12dp"
                app:boxCornerRadiusBottomStart="12dp"
                app:boxCornerRadiusTopEnd="12dp"
                app:boxCornerRadiusTopStart="12dp"
                app:backgroundTint="@color/pink"

                app:layout_constraintTop_toBottomOf="@+id/textViewAddQesition" android:textSize="12sp"
                android:textAlignment="textStart" app:layout_constraintHorizontal_bias="0.033"
                android:layout_marginTop="52dp"/>
        <Button
                android:id="@+id/publicButton"
                android:layout_width="match_parent"
                android:layout_height="61dp"
                android:text="@string/PublisQus"
                app:boxCornerRadiusBottomEnd="12dp"
                app:boxCornerRadiusBottomStart="12dp"
                app:boxCornerRadiusTopEnd="12dp"
                app:boxCornerRadiusTopStart="12dp"
                app:backgroundTint="@color/pink"

                app:layout_constraintTop_toBottomOf="@+id/imageButton" android:textSize="20sp"
                android:textAlignment="center"
                app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintVertical_bias="0.823"/>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
<?xml version="1.0" encoding="utf-8"?>
<layout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
>
<data>
    <variable
            name="postViewModle"
            type="com.example.android.nadris.PostPageViewModel"/>
</data>
<androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".post_pageFragment">
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/background"
            android:id="@+id/l1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
    android:orientation="vertical">
<LinearLayout android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal"
              android:id="@+id/l2">

    <ImageView
            android:src="@drawable/ic_facebook"
            android:id="@+id/profileImage"
            android:layout_width="60dp"
            android:layout_height="70dp"
            android:clickable="true"
            android:focusable="true"/>

    <LinearLayout android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:id="@+id/l3"
                  android:orientation="vertical">
        <TextView
                android:id="@+id/textViewWelcome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/welcome"
                android:textColor="@color/colorPrimary"
                android:textSize="10sp"
                android:layout_margin="4dp"
        />
        <TextView
                android:id="@+id/textViewAccountName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/name"
                android:textColor="@color/black"
                android:textSize="17sp"
                android:layout_margin="1dp"
        />
    </LinearLayout>
    <TextView
            android:id="@+id/textViewNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/num_one"
            android:textColor="@color/black"
            android:textSize="17sp"
            android:layout_marginRight="185dp"
    />

    <ImageView
            android:src="@drawable/ic_google"
            android:id="@+id/notificationImage"
            android:layout_height="50dp"
            android:layout_width="60dp"
            android:layout_marginRight="1dp"
            android:layout_marginLeft="10dp"
            android:clickable="true"
            android:focusable="true"
    />

</LinearLayout>

        <SearchView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_margin="@dimen/_10sdp"
                android:background="@drawable/background1"
                android:searchIcon="@drawable/ic_search"
                android:queryHint="@string/search"
                android:iconifiedByDefault="false"
                android:id="@+id/search_view"/>
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_10sdp"
            app:layout_constraintTop_toBottomOf="@+id/l1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/recycler_view" android:layout_marginTop="100dp"
            app:layout_constraintHorizontal_bias="0.64"/>


    <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/pink"
            android:id="@+id/fabBtnCreateNote"
            android:tint="@color/white"
            android:src="@drawable/ic_add"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="28dp"
            android:layout_marginBottom="64dp"
            android:onClick="@{()->postViewModle.navigate_to_add_post()}"/>

</androidx.constraintlayout.widget.ConstraintLayout>
</layout>
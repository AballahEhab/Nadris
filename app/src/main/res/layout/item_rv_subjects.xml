<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F8F5F5"
        android:layout_margin="8dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardv_item_sub"
            android:layout_width="match_parent"

            android:layout_height="120dp"
            android:background="#D5C8C8"
            app:cardBackgroundColor="#EAE5E5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/iv_subjects"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:layout_marginEnd="28dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.41"
                    app:srcCompat="@drawable/icon_physics" />

                <TextView
                    android:id="@+id/tv_name_subject"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="@string/tv_name_subject_phyiscs"
                    android:fontFamily="@font/cairo_light"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toStartOf="@+id/iv_subjects"
                    app:layout_constraintHorizontal_bias="0.88"
                    app:layout_constraintStart_toEndOf="@+id/btn_joining"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tv_count_student"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:layout_marginBottom="28dp"
                    android:text="@string/tv_count_student_on_all_subjects"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/iv_subjects"
                    app:layout_constraintTop_toBottomOf="@+id/tv_name_subject"
                    app:layout_constraintVertical_bias="0.714" />

                <TextView
                    android:id="@+id/tv_count_teacher"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="32dp"
                    android:text="@string/tv_count_teacher_on_all_subjects"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/tv_name_subject"
                    app:layout_constraintHorizontal_bias="0.818"
                    app:layout_constraintStart_toEndOf="@+id/btn_joining" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_joining"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:fontFamily="@font/cairo_light"
                    android:text="@string/btn_joining"
                    android:textSize="24sp"
                    app:backgroundTint="#D12F2F"
                    app:cornerRadius="15dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.508" />

                <TextView
                    android:id="@+id/tv_item_st_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/tv_item_st_count"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/tv_count_student"
                    app:layout_constraintTop_toTopOf="@+id/tv_count_student"
                    app:layout_constraintVertical_bias="0.0" />

                <TextView
                    android:id="@+id/tv_item_teach_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/tv_item_teach_count"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/tv_count_teacher"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintStart_toEndOf="@+id/btn_joining"
                    app:layout_constraintTop_toTopOf="@+id/tv_count_teacher"
                    app:layout_constraintVertical_bias="0.0" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.google.android.material.card.MaterialCardView
        style="@style/material_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/small_margin">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <EditText
                android:id="@+id/editTextQuestion"
                android:layout_width="@dimen/match_constrain"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:hint="@string/question_text"
                android:ems="40"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
            <CheckBox
                android:id="@+id/answer_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="@id/answer_3"
                android:layout_marginTop="@dimen/mid_margin"
                android:layout_marginBottom="@dimen/small_margin"
                app:layout_constraintTop_toBottomOf="@id/answer_3"/>
            <CheckBox
                android:id="@+id/answer_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/mid_margin"
                app:layout_constraintStart_toStartOf="@id/answer_2"
                app:layout_constraintTop_toBottomOf="@id/answer_2"/>
            <CheckBox
                android:id="@+id/answer_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/mid_margin"
                app:layout_constraintStart_toStartOf="@id/answer_1"
                app:layout_constraintTop_toBottomOf="@id/answer_1"/>
            <CheckBox
                android:id="@+id/answer_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/mid_margin"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/editTextQuestion"
            />
            <EditText
                android:id="@+id/text_answer_one"
                android:layout_width="@dimen/match_constrain"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:hint="@string/answer_1"
                app:layout_constraintBottom_toBottomOf="@+id/answer_1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/answer_1"
                app:layout_constraintTop_toTopOf="@+id/answer_1"/>
            <EditText
                android:layout_width="@dimen/match_constrain"
                android:layout_height="wrap_content"
                android:id="@+id/text_answer_two"
                android:inputType="text"
                android:hint="@string/answer_2"
                app:layout_constraintBottom_toBottomOf="@id/answer_2"
                app:layout_constraintTop_toTopOf="@id/answer_2"
                app:layout_constraintStart_toEndOf="@id/answer_2"
                app:layout_constraintEnd_toEndOf="parent"

            />
            <EditText
                android:layout_width="@dimen/match_constrain"
                android:layout_height="wrap_content"
                android:id="@+id/text_answer_three"
                android:inputType="text"
                android:hint="@string/answer_3"
                app:layout_constraintBottom_toBottomOf="@id/answer_3"
                app:layout_constraintTop_toTopOf="@id/answer_3"
                app:layout_constraintStart_toEndOf="@id/answer_3"
                app:layout_constraintEnd_toEndOf="parent"

            />
            <EditText
                android:layout_width="@dimen/match_constrain"
                android:layout_height="wrap_content"
                android:id="@+id/text_answer_four"
                android:inputType="text"
                android:hint="@string/answer_4"
                app:layout_constraintBottom_toBottomOf="@id/answer_4"
                app:layout_constraintTop_toTopOf="@id/answer_4"
                app:layout_constraintStart_toEndOf="@id/answer_4"
                app:layout_constraintEnd_toEndOf="parent"

            />
            <TextView
                android:id="@+id/TV_answer_location"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/match_constrain"
                app:layout_constraintTop_toBottomOf="@id/text_answer_four"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/answer_location"
                android:text="@string/answer_location"
                style="@style/material_text_body"
                android:gravity="center"
                android:layout_marginStart="@dimen/small_margin"
            />
            <EditText
                android:id="@+id/answer_location"
                android:layout_width="@dimen/match_constrain"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@id/TV_answer_location"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/TV_answer_location"
                app:layout_constraintBottom_toBottomOf="@id/TV_answer_location"
                android:hint="@string/ex_unit_5_lesson_3"
            />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>
</layout>
<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable name="viewModel"
                  type="com.example.android.nadris.ui.teacherActivity.addContent.AddContentViewModel"/>
    </data>
    <com.google.android.material.card.MaterialCardView
        style="@style/material_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:context=".ui.teacherActivity.addContent.bottomSheetRecord.addRecordFragment">
            <Chronometer
                android:id="@+id/chronometer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:textColor="@android:color/darker_gray"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:textSize="50sp"
                style="@style/material_text_body"/>
            <ImageButton
                android:id="@+id/imgBtRecord"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:background="?android:attr/selectableItemBackground"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/chronometer"
                app:srcCompat="@drawable/ic_mike"/>
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imgBtStop"
                android:background="?android:attr/selectableItemBackground"
                android:padding="15dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/chronometer"
                app:layout_constraintBottom_toTopOf="@id/seekBar"
                app:srcCompat="@drawable/ic_player_stop_1"
                android:visibility="gone"
            />
            <SeekBar
                android:layout_width="@dimen/match_constrain"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/imgBtRecord"
                app:layout_constraintStart_toEndOf="@id/imgViewPlay"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_gravity="center_vertical"
                android:id="@+id/seekBar"
                android:layout_marginTop="@dimen/mid_margin"
                android:layout_marginStart="@dimen/mid_margin"
                android:layout_marginEnd="@dimen/mid_margin"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="@dimen/mid_margin"
            />
            <ImageView
                android:id="@+id/imgViewPlay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:layout_marginStart="@dimen/small_margin"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/seekBar"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/seekBar"
                app:srcCompat="@drawable/ic_baseline_play_arrow_24"
                android:layout_marginBottom="@dimen/mid_margin"
            />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>
</layout>